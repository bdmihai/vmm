{
    "name": "vmm",
    "type": "project",
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },

    "require": {
        "twig/twig": "1.*",
        "twbs/bootstrap": "3.*",
        "components/jquery": "2.*",
        "monolog/monolog": "1.17.*"
    },



    "scripts" : {
        "post-update-cmd" : [
            "php -r \"copy('./vendor/twbs/bootstrap/dist/css/bootstrap.css'                        , './web/css/bootstrap.css'                        );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/css/bootstrap.css.map'                    , './web/css/bootstrap.css.map'                    );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/css/bootstrap.min.css'                    , './web/css/bootstrap.min.css'                    );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/css/bootstrap.min.css.map'                , './web/css/bootstrap.min.css.map'                );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/css/bootstrap-theme.css'                  , './web/css/bootstrap-theme.css'                  );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/css/bootstrap-theme.css.map'              , './web/css/bootstrap-theme.css.map'              );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/css/bootstrap-theme.min.css'              , './web/css/bootstrap-theme.min.css'              );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/css/bootstrap-theme.min.css.map'          , './web/css/bootstrap-theme.min.css.map'          );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/fonts/glyphicons-halflings-regular.eot'   , './web/fonts/glyphicons-halflings-regular.eot'   );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/fonts/glyphicons-halflings-regular.svg'   , './web/fonts/glyphicons-halflings-regular.svg'   );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/fonts/glyphicons-halflings-regular.ttf'   , './web/fonts/glyphicons-halflings-regular.ttf'   );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/fonts/glyphicons-halflings-regular.woff'  , './web/fonts/glyphicons-halflings-regular.woff'  );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/fonts/glyphicons-halflings-regular.woff2' , './web/fonts/glyphicons-halflings-regular.woff2' );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/js/bootstrap.js'                          , './web/js/bootstrap.js'                          );\"",
            "php -r \"copy('./vendor/twbs/bootstrap/dist/js/bootstrap.min.js'                      , './web/js/bootstrap.min.js'                      );\"",
            "php -r \"copy('./vendor/components/jquery/jquery.min.js'                              , './web/js/jquery.min.js'                         );\"",
            "php -r \"copy('./vendor/components/jquery/jquery.min.map'                             , './web/js/jquery.min.map'                        );\""
        ]
    }
}
